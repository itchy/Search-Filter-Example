<h1>Listing shifts</h1>
	<div id="search_form">
		<%= form_for(:filter, :url => shifts_path, :method => :get) do |f|  %>
			<div class="field">
		    <%= f.label :description %><br />
		    <%= f.text_field :description %>
		  </div>
		
			<div class="actions">
		    <%= f.submit('Search') %>
		  </div>
		<% end %>
		
	</div>	
	
	
	
<table>
  <tr>
    <th>Time</th>
    <th>Hours</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.time %></td>
    <td><%= shift.hours %></td>
    <td><%= shift.description %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Shift', new_shift_path %>
